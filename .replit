entrypoint = "main.py"
modules = ["python-3.10", "web", "nodejs-20", "postgresql-16"]

hidden = [".pythonlibs"]

[nix]
channel = "stable-25_05"
packages = ["arrow-cpp", "glibcLocales", "pkg-config"]

[deployment]
run = ["gunicorn", "--bind=0.0.0.0:5000", "--workers=2", "api:app"]
deploymentTarget = "autoscale"

[[ports]]
localPort = 5000
externalPort = 80

[agent]
expertMode = true
integrations = ["javascript_log_in_with_replit:1.0.0", "javascript_database:1.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flask App"

[[workflows.workflow]]
name = "Flask App"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python api.py"
waitForPort = 5000
